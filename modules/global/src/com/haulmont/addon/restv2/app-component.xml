<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<app-component xmlns="http://schemas.haulmont.com/cuba/app-component.xsd"
               dependsOn="com.haulmont.cuba">

    <module name="global" blocks="*">
        <artifact name="restv2-global" appJar="true"/>
        <artifact name="restv2-core" classifier="db" ext="zip" configuration="dbscripts"/>

        <property name="cuba.persistenceConfig" value="+com/haulmont/addon/restv2/persistence.xml"/>
        <property name="cuba.metadataConfig" value="+com/haulmont/addon/restv2/metadata.xml"/>
        <property name="cuba.viewsConfig" value="+com/haulmont/addon/restv2/views.xml"/>
    </module>
    <module name="core" dependsOn="global" blocks="core">
        <artifact name="restv2-core" appJar="true"/>
        <artifact name="restv2-core" classifier="db" ext="zip" configuration="dbscripts"/>

        <property name="cuba.springContextConfig" value="+com/haulmont/addon/restv2/spring.xml"/>
        <property name="cuba.remotingSpringContextConfig" value="+com/haulmont/addon/restv2/remoting-spring.xml"/>
        <property name="cuba.mainMessagePack" value="+com.haulmont.addon.restv2.core"/>
    </module>
    <module name="web" dependsOn="global" blocks="web">
        <artifact name="restv2-web" appJar="true"/>
        <artifact name="restv2-rest-api" appJar="true"/>
        <artifact name="restv2-web" classifier="web" ext="zip" configuration="webcontent"/>

        <property name="cuba.restv2SpringContextConfig" value="+com/haulmont/addon/restv2/restv2-dispatcher-spring.xml"/>
        <property name="cuba.springContextConfig" value="+com/haulmont/addon/restv2/web-spring.xml"/>
        <property name="cuba.dispatcherSpringContextConfig"
                  value="+com/haulmont/addon/restv2/web-dispatcher-spring.xml"/>
        <property name="cuba.windowConfig" value="+com/haulmont/addon/restv2/web-screens.xml"/>
        <property name="cuba.menuConfig" value="+com/haulmont/addon/restv2/web-menu.xml"/>
        <property name="cuba.permissionConfig" value="+com/haulmont/addon/restv2/web-permissions.xml"/>
        <property name="cuba.mainMessagePack" value="+com.haulmont.addon.restv2.web"/>
    </module>
    <module name="portal" dependsOn="global" blocks="portal">
        <artifact name="restv2-portal" appJar="true"/>
        <artifact name="restv2-rest-api" appJar="true"/>

        <property name="cuba.restv2SpringContextConfig" value="+com/haulmont/addon/restv2/restv2-dispatcher-spring.xml"/>
        <property name="cuba.springContextConfig"
                  value="+com/haulmont/addon/restv2/portal-security-spring.xml com/haulmont/addon/restv2/portal-spring.xml"/>
        <property name="cuba.dispatcherSpringContextConfig"
                  value="+com/haulmont/addon/restv2/portal-dispatcher-spring.xml"/>
        <property name="cuba.mainMessagePack" value="+com.haulmont.addon.restv2.portal"/>
    </module>
</app-component>